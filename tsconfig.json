{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "es2017"
    ],
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "incremental": true,
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "rootDir": "./src",
    "baseUrl": ".",
    "rootDirs": [
      "src"
    ]
  },
  "exclude" : ["src/**/*.test.ts"],
  "include": ["src/**/*"]
}